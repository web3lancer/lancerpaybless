# LancerPayBless Environment Configuration

# Bless Network Configuration
BLESS_NETWORK_RPC_URL=https://bless-rpc.alt.technology
BLESS_NETWORK_EXPLORER_URL=https://bless.alt.technology
BLESS_NETWORK_CHAIN_ID=2026

# Bridge Configuration - Connect Web2 Pay App to Bless Network
BRIDGE_API_KEY=your-secure-bridge-api-key-here
WEB2_PAY_APP_BASE_URL=https://pay.web3lancer.com
WEB2_PAY_APP_API_KEY=your-web2-app-api-key

# Blockless Network Configuration (for deployment)
BLOCKLESS_NETWORK_ENDPOINT=https://gateway.blockless.network
BLOCKLESS_FUNCTION_URL=https://your-function.blockless.network

# Default Escrow Settings
DEFAULT_ESCROW_DURATION_DAYS=30
AUTO_PROCESS_ESCROW=true

# Security Settings
ENABLE_2FA=true
REQUIRE_KYC_FOR_LARGE_AMOUNTS=true
LARGE_AMOUNT_THRESHOLD=10000

# Logging Configuration
LOG_LEVEL=info
ENABLE_SECURITY_LOGGING=true

# Development Settings (remove in production)
DEBUG_MODE=false
MOCK_BLOCKCHAIN_CALLS=false